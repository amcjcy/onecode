[Unit]
Description=code deamon
After=rc-local.service

[Service]
Type=simple
User=root
Group=root
ExecStart=/usr/bin/nohup /usr/bin/python /code/shadowsocks/server.py m>> /code/shadowsocks/code.log 2>&1 &
ExecStop=/usr/bin/bash /code/shadowsocks/stop.sh
Restart=always
LimitNOFILE=512000
[Install]
WantedBy=multi-user.target